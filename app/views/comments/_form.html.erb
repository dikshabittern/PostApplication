<%= form_with(model:[@post, @post.comments.build], local:true)	do |f|%>
		<p>
			<%= f.label :commenter %><br>
			<%= f.text_field :commenter%>
		</p>

		<p>
			<%= f.label :body%><br>
			<%= f.text_area :body %>
		</p>

		<p>
			<%= f.hidden_field :user_id, :value => current_user.id %>
		</p>

		<p>
			<%= f.submit%>
		</p>
<% end %>