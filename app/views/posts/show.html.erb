<div class="d-flex justify-content-center"><h1>Show Country</h1></div><br>
	
	<p>
		<strong>Title:</strong>
		<%= @post.title %>
	</p>
	
	<p>
		<strong>Text:</strong>
		<%= @post.text %>
	</p>

	<h2>Comments</h2>
	<%= render @post.comments %>
	
	<h2>Add a comment:</h2>
	<%= render 'comments/form' %>

	<div class="offset-md-5">
		<%= link_to 'Edit' , edit_post_path, :class=> "btn btn-outline-danger"%>
		<%= link_to 'Back' , posts_path, :class=> "btn btn-outline-danger"%>
	</div>
	
<p id="notice"><%= notice %></p>