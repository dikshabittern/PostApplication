<div class="d-flex justify-content-center"><h1>List of Posts</h1></div><br>

<table class="table table-striped table-dark table-bordered table-hover">
	<thead>
		<tr>
			<th>Title</th>
			<th>Text</th>
			<th>User</th>
			<th>Image</th>
			<th>Actions</th>
		</tr> 
	</thead>
	<tbody>
		<% @posts.each  do |p|%>
			<tr>
				<td><%= p.title %></td>
				<td><%= p.text %></td>
				<td><%= p.user.name %></td>
				<td><%= image_tag p.avatar.url.to_s, :size => "260x180" %></td>
				<td><%= link_to 'Show',  post_path(p) %></td>
				<% if current_user == p.user %>
					<td><%= link_to 'Edit', edit_post_path(p) %></td>
					<td><%= link_to 'Delete',  post_path(p), method: :delete, data: {confirm: 'Are You Sure'} %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>
<div class="offset-md-5">
	<%=	link_to 'New post', new_post_path ,:class=> "btn btn-outline-warning" %>
</div>
