<div class="d-flex justify-content-center"><h1>Create Post</h1></div><br>
<%= form_with scope: :post, url: posts_path, local: true do |f|%>
	
	<div class="form-group d-flex justify-content-center">
		<%= f.label :title, "Title:", class: "control-label col-md-3"%>
		<%= f.text_field :title, class: "form-control col-md-8" %>
	</div>

	<div class="form-group d-flex justify-content-center">
		<%= f.label :text, "Text", class: "control-label col-md-3"%>
		<%= f.text_field :text, class: "form-control col-md-8" %>
	</div>
		<div class="form-group d-flex justify-content-center">
		<%= f.hidden_field :user_id, :value => current_user.id %>
	</div>


	<div class="offset-md-5">
		<%= f.submit "Save", class: "btn btn-primary" %>
		<%= link_to 'Back' , posts_path, class: " btn btn-success"%>
	</div>

<% end %>